/error"},"ico_howToScan_allowedObjects":{"alt":"scan-entire-house","type":"image","identifier":"ico_howToScan_allowedObjects","variants":[{"url":"\/images\/ico_howToScan_allowedObjects.png","traits":["1x","light"]}]},"ico_howToScan_rightRoom.png":{"alt":"room","type":"image","identifier":"ico_howToScan_rightRoom.png","variants":[{"url":"\/images\/ico_howToScan_rightRoom.png","traits":["1x","light"]}]},"ico_howToScan_corner.png":{"alt":"start-scan","type":"image","identifier":"ico_howToScan_corner.png","variants":[{"url":"\/images\/ico_howToScan_corner.png","traits":["1x","light"]}]},"ico_howToScan_uPattern.png":{"alt":"u-pattern","type":"image","identifier":"ico_howToScan_uPattern.png","variants":[{"url":"\/images\/ico_howToScan_uPattern.png","traits":["1x","light"]}]}}}